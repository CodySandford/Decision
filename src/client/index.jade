extends ./layout.jade
block content
  .distance
    label Distance in Miles:&nbsp;
    label#distance 10.0
    .row
      .col-xs-1.slider-label 0.5
      .col-xs-10
        .slider.shor.slider-material-orange#slider
      .col-xs-1.slider-label 30
  .category
    .row
      .col-sm-4.selection
        .genre.btn.btn-block.btn-default.btn-raised.btn-material-light-blue#foodButton(data-categories="cafe restaurant")
          .genre-icon.icon-food
          .genre-text Food
      .col-sm-4.selection
        .genre.btn.btn-block.btn-default.btn-raised.btn-material-deep-purple#entertainmentButton(data-categories="spa zoo movie_rental museum")
          .genre-icon.icon-movie
          .genre-text Entertainment
      .col-sm-4.selection
        .genre.btn.btn-block.btn-default.btn-raised.btn-material-deep-orange#recreationButton(data-categories="shopping_mall night_club")
          .genre-icon.icon-binocular
          .genre-text Recreation
